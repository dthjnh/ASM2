<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Address -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donation Site Address"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <!-- Hours -->
    <TextView
        android:id="@+id/dialogHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opening Hours: 9 AM - 5 PM"
        android:paddingBottom="4dp" />

    <!-- Blood Types -->
    <TextView
        android:id="@+id/dialogBloodTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood Types: O+, A+"
        android:paddingBottom="16dp" />

    <!-- Buttons Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Register Button -->
        <Button
            android:id="@+id/btnDialogRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Register as Donor"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <!-- Find Route Button -->
        <Button
            android:id="@+id/btnDialogFindRoute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Find a Route"
            android:backgroundTint="#008577"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Close Button -->
    <Button
        android:id="@+id/btnDialogClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:backgroundTint="#DDDDDD"
        android:textColor="#000000"
        android:layout_marginTop="16dp" />
</LinearLayout>