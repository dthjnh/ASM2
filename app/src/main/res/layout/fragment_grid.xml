<androidx.gridlayout.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    app:columnCount="2"
    app:rowCount="3"
    android:layout_gravity="center">

    <!-- Add Site Button -->
    <LinearLayout
        android:id="@+id/add_site_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:background="@drawable/background_card"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_add_site" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Site"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- View Donors Button -->
    <LinearLayout
        android:id="@+id/view_donors_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:background="@drawable/background_card"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_donors" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Donors"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- View Volunteers Button -->
    <LinearLayout
        android:id="@+id/view_volunteers_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:background="@drawable/background_card"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_volunteers" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Volunteers"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_emergency_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:background="@drawable/background_card"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_emergency" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Call"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</androidx.gridlayout.widget.GridLayout>