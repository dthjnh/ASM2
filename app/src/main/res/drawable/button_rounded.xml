<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid red background -->
    <solid android:color="@color/red_700" /> <!-- Deep red color -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- White stroke (border) -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" /> <!-- White border -->

    <!-- Optional padding for better visuals -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
